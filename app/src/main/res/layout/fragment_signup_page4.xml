<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <TextView
                android:id="@+id/txtSignup"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_lightblack"
                android:text="Please enter a password too\n(It will be safely kept under lock and key)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:focusableInTouchMode="true"
                    android:hint="Enter Password"
                    android:textColorHint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@drawable/rectangle_rounded_corner"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />

            </FrameLayout>
            <TextView
                android:id="@+id/txtErrorOne"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="bottom"
                android:text="*Please enter password."
                android:textColor="@color/red"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/white"
                android:padding="@dimen/dp_12"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/dp_10"
                android:imeOptions="actionDone"
                android:hint="Re-enter Password"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_rounded_corner"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tvConfirmPass"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="bottom"
                android:text="*Please enter name."
                android:textColor="@color/red"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/llDone"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/rounded_corner_drawable">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@mipmap/del_icon5"
            android:layout_marginRight="@dimen/dp_5"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/llProgress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bar4"/>
        <!--        <TextView
                    android:text="0%"
                    android:textColor="@color/white"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingBottom="@dimen/dp_5"
                    android:gravity="center"
                    android:id="@+id/tvPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/reg_img"/>
                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/thumb_bg"
                    android:progressDrawable="@drawable/progress"
                    android:max="100"
                    android:minHeight="@dimen/dp_10"
                    android:maxHeight="@dimen/dp_10"
                    android:progress="75"
                    />-->
    </LinearLayout>
</LinearLayout>
