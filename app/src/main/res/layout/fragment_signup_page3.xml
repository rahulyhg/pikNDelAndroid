<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">

        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <TextView
                android:id="@+id/txtSignup"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/text_lightblack"
                android:text="And your email ID is...\n(We solemnly swear, we won't spam it!)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:textColor="@color/white"
                android:padding="@dimen/dp_12"
                android:singleLine="true"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/dp_25"
                android:hint="Enter Email Address"
                android:textColorHint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:background="@drawable/rectangle_rounded_corner"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/txtError"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_gravity="bottom"
                android:text="*Please enter name."
                android:textColor="@color/red"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/llDone"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="@drawable/rounded_corner_drawable">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@mipmap/del_icon5"
            android:layout_marginRight="@dimen/dp_5"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/llProgress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/bar3"/>
<!--        <TextView
            android:text="50%"
            android:textColor="@color/white"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_5"
            android:gravity="center"
            android:id="@+id/tvPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:background="@mipmap/reg_img"/>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/thumb_bg"
            android:progressDrawable="@drawable/progress"
            android:max="100"
            android:minHeight="@dimen/dp_10"
            android:maxHeight="@dimen/dp_10"
            android:progress="50"
            />-->
    </LinearLayout>
</LinearLayout>
