<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pikndel.activity.WelcomeActivity"
    android:background="@mipmap/bg1">

    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivWelcome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/wlcm"/>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_5"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWelLogin"
                android:textColor="@color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:text="@string/login"
                android:padding="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_drawable"/>
            <TextView
                android:id="@+id/tvWelRegis"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_4"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:text="@string/registration"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_12"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_drawable"/>
            <TextView
                android:id="@+id/tvWelSkip"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_4"
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:text="Skip"
                android:layout_width="match_parent"
                android:padding="@dimen/dp_12"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_drawable"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
