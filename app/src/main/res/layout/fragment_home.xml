<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_8"
        android:background="@mipmap/bg">

        <ImageView
            android:id="@+id/ivInterCity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/img1"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/blue_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4">

            <ImageView
                android:id="@+id/ivInter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/help_ic"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_20" />

            <TextView
                android:id="@+id/tvInter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Inter-city"
                android:textColor="@color/white"
                android:gravity="end|center_vertical"
                android:layout_gravity="bottom"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@mipmap/bg"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8">

        <ImageView
            android:id="@+id/ivIntraCity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@mipmap/img2"
            android:padding="@dimen/dp_20"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/blue_bg"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_4"
            android:layout_gravity="bottom">
            <ImageView
                android:id="@+id/ivIntra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/help_ic"
                android:paddingRight="@dimen/dp_20"/>

            <TextView
                android:id="@+id/tvIntra"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Intra-city"
                android:textColor="@color/white"
                android:gravity="end|center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>