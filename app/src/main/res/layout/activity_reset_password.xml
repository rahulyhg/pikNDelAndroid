<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1"
    android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_70"
                android:focusableInTouchMode="true"
                android:src="@mipmap/logo"/>

            <EditText
                android:id="@+id/etPswd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="Enter New Password"
                android:textColorHint="@color/lightwhite"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColor="@color/white"
                android:padding="@dimen/dp_12"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginTop="@dimen/dp_30"
                android:maxLength="12"
                android:inputType="textPassword"
                android:background="@drawable/rectangle_rounded_corner"
                />
            <TextView
                android:id="@+id/tvErrorPswd"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Invalid mobile number"
                android:layout_marginLeft="@dimen/dp_30"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/dp_1"/>
            <EditText
                android:id="@+id/etConfirmPswd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:hint="Confirm Password"
                android:drawablePadding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_30"
                android:textAppearance="?android:textAppearanceSmall"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColorHint="@color/lightwhite"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_12"
                android:maxLength="12"
                android:background="@drawable/rectangle_rounded_corner"
                />
            <TextView
                android:id="@+id/tvErrorConfPswd"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*Invalid mobile number"
                android:layout_marginLeft="@dimen/dp_30"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/dp_1"/>
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:gravity="center"
                android:textColor="@color/white"
                android:textAppearance="?android:textAppearanceMedium"
                android:padding="@dimen/dp_12"
                android:background="@drawable/button_shape"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
