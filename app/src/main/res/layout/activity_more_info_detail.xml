<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg1">
    <include
        layout="@layout/toolbar"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:background="@drawable/ractangle_gray_stroke">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pick_ic1"/>
                <TextView
                    android:id="@+id/tvPickUpFrom"
                    android:text="@string/pick_upfrom"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_5"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <View
                    android:layout_gravity="center_horizontal"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="match_parent"
                    android:background="@color/lightblack"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvPickName"
                        android:paddingLeft="@dimen/dp_25"
                        android:paddingBottom="@dimen/dp_5"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tvPickAddress"
                        android:paddingLeft="@dimen/dp_25"
                        android:paddingBottom="@dimen/dp_10"
                        android:text=""
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/lightblack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pick_ic2"/>
                <TextView
                    android:id="@+id/tvDeliverTO"
                    android:text="@string/deliver_to"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvDeliverName"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvDeliverAddress"
                    android:paddingLeft="@dimen/dp_40"
                    android:paddingBottom="@dimen/dp_5"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/lightblack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey"/>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPackageType"
                android:text="@string/package_type"
                android:paddingTop="@dimen/dp_5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvDocumentUpto"
                android:paddingTop="@dimen/dp_5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/black"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvUpToKg"
                android:paddingTop="@dimen/dp_5"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/lightblack"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>