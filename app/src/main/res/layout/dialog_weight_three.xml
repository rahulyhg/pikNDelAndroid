<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/dialog_shape">
        <TextView
            android:id="@+id/tvThankYou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thank_you"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_25"/>
        <TextView
            android:id="@+id/tvEnter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your mobile number and we will get back to you shortly."
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_lightblack"
            android:layout_marginTop="@dimen/dp_15" />


        <EditText
            android:id="@+id/etMobileNo"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/rounded_bg_edittext"
            android:hint="Enter Your Mobile No."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="@dimen/dp_12"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="10"
            android:inputType="number"
            android:drawablePadding="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tvErrorMobileNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Please enter your contact no."
            android:textColor="@color/red"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:layout_gravity="center"
            android:paddingBottom="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_50"
            android:paddingRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/dialog_button"/>

    </LinearLayout>
    </LinearLayout>

